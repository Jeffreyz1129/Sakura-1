{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "lib": [
			"DOM",
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol"			
		],
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "paths": {
            "#config": ["src/config"],
            "#constants": ["./src/lib/utility/constants"],
            "#structures": ["./src/lib/structures/index"],
            "#types": ["./src/lib/types/index"],
            "#utils": ["./src/lib/utility/utils"]
        },        
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "ESNext"
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}